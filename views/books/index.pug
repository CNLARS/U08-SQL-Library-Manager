//- The main book listing page.

extends layout

block content
    head
    title= title
    link(href='../public/stylesheets/style.css' rel='stylesheet')
    h1 Books
    p
    a.button(href='new_book.html') Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href="/books/" + book.id)= book.title
                    td book.author
                    td book.genre
                    td book.year